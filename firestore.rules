rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGLAS TEMPORALES PARA DESARROLLO - MÁS PERMISIVAS
    // TODO: Ajustar para producción
    
    // Reglas para la colección de tareas
    match /tasks/{taskId} {
      // Permitir acceso si el usuario está autenticado
      allow read, write: if request.auth != null;
      
      // Permitir crear nuevas tareas si el usuario está autenticado
      allow create: if request.auth != null;
    }
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Permitir acceso si el usuario está autenticado
      allow read, write: if request.auth != null;
      
      // Permitir crear perfil si el usuario está autenticado
      allow create: if request.auth != null;
    }
    
    // Reglas para la colección de sesiones (si se implementa)
    match /sessions/{sessionId} {
      // Permitir acceso si el usuario está autenticado
      allow read, write: if request.auth != null;
      
      // Permitir crear sesiones si el usuario está autenticado
      allow create: if request.auth != null;
    }
    
    // Reglas para metadatos de sincronización (si se implementa)
    match /sync_metadata/{userId} {
      // Permitir acceso si el usuario está autenticado
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a cualquier otra colección si el usuario está autenticado
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}